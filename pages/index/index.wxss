/**index.wxss**/
.tabBar {
    display: flex;
    padding: 5rpx 5rpx;
    background-color: #35a2e5;
    height: 80rpx;
    align-items: center;
}

.tab {
    flex-grow: 1;
    text-align: center;
    color: white;
}

.hot-news {
    position: relative;
    height: 350rpx;
    margin: 20rpx;
    border-radius: 15rpx;
}

.hot-tips {
    position: absolute;
    right: 1rpx;
    top: 1rpx;
    font-size: 30rpx;
    color: white;
    background-color: rgba(255, 0, 0, 0.5);
    border-radius: 0 0 0 30rpx;
    padding: 5rpx 10rpx 10rpx 20rpx;
}

.hot-desc {
    height: 150rpx;
    position: absolute;
    bottom: 0rpx;
    padding: 10rpx;
}

.hot-title {
    color: white;
    margin-bottom: 10rpx;
    font-size: 36rpx;
    padding: 0rpx 10rpx;
}

.hot-footage {
    color: #ccc;
    font-size: 30rpx;
    line-height: 42rpx;
    padding: 0rpx 10rpx;
}

.hot-source {
    margin-right: 20rpx;
}

.hot-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}